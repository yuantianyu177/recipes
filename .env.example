# ---------- Backend ----------
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
SECRET_KEY=change-me-to-a-random-string
UPLOAD_DIR=./uploads

# ---------- Frontend ----------
VITE_API_BASE_URL=http://localhost:8000/api
